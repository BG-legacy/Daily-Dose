{
  "compilerOptions": {
    "target": "ES2020", // changed from 2017
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES2020"
    ],
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true, //changed
    "noEmit": true,
    "incremental": true,
    "module": "CommonJS", // changed from esnext
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
